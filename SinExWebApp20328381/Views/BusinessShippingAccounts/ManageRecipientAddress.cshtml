@model IEnumerable<SinExWebApp20328381.Models.Address>

<h4>Manage Recipient Address</h4>
<p>
    @Html.ActionLink("Add New One", "AddRecipientAddress")
</p>
@if (ViewBag.addressCount == "Empty")
{
    @:You havn't save any address
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingAccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.AddressType == "Recipient Address")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NickName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAccountId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Building)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressType)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditRecipientAddress", new { id = item.AddressId }) |
                        @Html.ActionLink("Delete", "DeleteRecipientAddress", new { id = item.AddressId })
                    </td>
                </tr>
            }
        }
    </table>
}