@model IEnumerable<SinExWebApp20328381.Models.Destination>

@{
    ViewBag.Title = "Destinations";
}

<h2>Destinations</h2>
@if (User.IsInRole("Employee") || User.IsInRole("Customer"))
{
    <p>
        @Html.ActionLink("add service cities", "Create", "Destinations")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.CurrencyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProvinceCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.CurrencyCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProvinceCode)
        </td>
        <td>
        </td>
    </tr>
}

</table>
