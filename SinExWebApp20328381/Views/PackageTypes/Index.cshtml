@model IEnumerable<SinExWebApp20328381.Models.PackageType>

@{
    ViewBag.Title = "Package Types";
}

<h2>Package Types</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            <p>
            @Html.DisplayFor(modelItem => item.Description)
            </p>
        @foreach (var sizeItem in item.PackageTypeSizes)
        {
            <p>
                (Size: @Html.DisplayFor(modelItem => sizeItem.size); Weight limit: @Html.DisplayFor(modelItem => sizeItem.limit))
            </p>
        }
        </td>
    </tr>
}

</table>
